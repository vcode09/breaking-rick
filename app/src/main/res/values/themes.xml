<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BasicWorkTest" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="toolbarStyle">@style/ToolBarStyle</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/purple_500</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

    <style name="Theme.BasicWorkTest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BasicWorkTest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BasicWorkTest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomDialog" />

    <style name="CustomDialog.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/generic_button_padding_large</item>
        <item name="android:paddingRight">@dimen/generic_button_padding_large</item>
        <item name="android:paddingTop">@dimen/generic_button_padding_small</item>
        <item name="android:paddingBottom">@dimen/generic_button_padding_small</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomDialog.Negative" parent="CustomDialog.Button">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomDialog.Positive" parent="CustomDialog.Button">
        <item name="android:textColor">@color/colorNeutralGrayDark</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_custom_dialog</item>
    </style>

    <style name="ProgressBarStyle" >
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="GenericTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorHeight">@dimen/tab_indicator</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tabBackground">@color/black</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/purple_500</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabPaddingEnd">@dimen/generic_margin_small</item>
        <item name="tabPaddingStart">@dimen/generic_margin_small</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="GenericTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">bottom</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>